<?xml version="1.0"?>

<!-- Here we define the robot, we named it "iiwa14_tool" -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Tool properties -->
  <xacro:property name="tool_mass" value="0.200" />
  <xacro:property name="tool_joint_offset" value="0.00 0.00 0.00" />
  <xacro:property name="tool_link_offset" value="-0.16 0.0 0.0" />

  <xacro:macro name="striker" params="robot_name parent hardware_interface">
    <joint name="${robot_name}_striker" type="fixed">
		<parent link="${parent}" />
		<child link = "${robot_name}_striker_base" />
		<origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </joint>

    <link name="${robot_name}_striker_base">
		<inertial>
		<origin xyz="0 0 0.0417" rpy="0 0 0" />
		<mass value="0.1" />
		<inertia
			ixx="0.000297" ixy="0.0" ixz="0.0"
			iyy="0.000271" iyz="0.0000001" izz="0.0000653" />
		</inertial>
		<visual>
		<origin xyz="0 0 0" rpy="0 0.0 0"/>
		<geometry>
		  	<mesh filename="package://air_hockey_description/meshes/striker_new/visual/gas_spring.stl"/>
		</geometry>
		<material name="Grey"/>
		</visual>
		<collision>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
		  	<mesh filename="package://air_hockey_description/meshes/striker_new/collision/gas_spring_collision.stl"/>
		</geometry>
		<material name="Grey"/>
		</collision>
    </link>

    <joint name="${robot_name}_striker_joint_1" type="revolute">
		<parent link="${robot_name}_striker_base" />
		<child link = "${robot_name}_striker_joint_link" />
		<origin xyz="0.0 0.0 0.3455" rpy="0 0 0" />
		<axis xyz="1 0 0"/>
		<limit effort="10" lower="-${PI/2}" upper="${PI/2}" velocity="10"/>
		<safety_controller k_position="100" k_velocity="2" soft_lower_limit="-2.094395102" soft_upper_limit="2.094395102"/>
		<dynamics damping="0.5" friction="0.5"/>
    </joint>

    <link name="${robot_name}_striker_joint_link">
    	<inertial>
	        <origin xyz="0 0.0 0" rpy="0 0 0" />
	        <mass value="0.0" />
	        <inertia
                ixx="0.0" ixy="0.0" ixz="0.0"
                iyy="0.0" iyz="0.0" izz="0.0" />
      	</inertial>
    </link>

    <joint name="${robot_name}_striker_joint_2" type="revolute">
		<parent link="${robot_name}_striker_joint_link" />
		<child link = "${robot_name}_striker_mallet" />
		<origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
		<axis xyz="0 1 0"/>
		<limit effort="10" lower="-${PI/2}" upper="${PI/2}" velocity="10"/>
		<safety_controller k_position="100" k_velocity="2" soft_lower_limit="-2.094395102" soft_upper_limit="2.094395102"/>
		<dynamics damping="0.5" friction="0.5"/>
    </joint>

  <!--  The striker frame is here defined -->
    <link name="${robot_name}_striker_mallet">
      <inertial>
        <origin xyz="0 0.0 0.0805" rpy="0 0 0" />
        <mass value="0.0" />
        <inertia
                ixx="0.0" ixy="0.0" ixz="0.0"
                iyy="0.0" iyz="0.0" izz="0.0" />
      </inertial>
      <visual>
        <origin xyz="0 0.0 0.0" rpy="0.0 0.0 0"/>
        <geometry>
        	<mesh filename="package://air_hockey_description/meshes/striker_new/visual/joint_mallet.stl"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <collision>
        <origin xyz="0 0.0 0.0" rpy="0.0 0.0 0"/>
        <geometry>
          	<mesh filename="package://air_hockey_description/meshes/striker_new/collision/joint_mallet_collision.stl"/>
        </geometry>
        <material name="Grey"/>
        <surface>
            <bounce>
                <restitution_coefficient>0.8</restitution_coefficient>
            </bounce>
            <contact>
                <ode>
                    <soft_cfm>0.1</soft_cfm>
                    <soft_erp>0.1</soft_erp>
                    <max_vel>1</max_vel>
                </ode>
            </contact>
        </surface>
      </collision>
    </link>

    <joint name="${robot_name}_striker_mallet_fix" type="fixed">
		<parent link="${robot_name}_striker_mallet" />
		<child link = "${robot_name}_striker_mallet_tip" />
		<origin xyz="0.0 0.0 0.0805" rpy="0 0 0" />
		<axis xyz="1 0 0"/>
    </joint>

    <link name="${robot_name}_striker_mallet_tip">
    	<inertial>
	        <origin xyz="0 0.0 0" rpy="0 0 0" />
	        <mass value="0.0" />
	        <inertia
                ixx="0.0" ixy="0.0" ixz="0.0"
                iyy="0.0" iyz="0.0" izz="0.0" />
      	</inertial>
    </link>

    <gazebo reference="${robot_name}_striker_base">
			<material>Gazebo/Grey</material>
			<mu1>0.2</mu1>
			<mu2>0.2</mu2>
			<selfCollide>0</selfCollide>
    </gazebo>

    <gazebo reference="${robot_name}_striker_joint_link">
		<material>Gazebo/Grey</material>
		<mu1>0.2</mu1>
		<mu2>0.2</mu2>
		<selfCollide>0</selfCollide>
    </gazebo>

    <gazebo reference="${robot_name}_striker_mallet">
			<material>Gazebo/Grey</material>
			<mu1>0.2</mu1>
			<mu2>0.2</mu2>
			<selfCollide>0</selfCollide>
    </gazebo>

    <gazebo reference="${robot_name}_striker_mallet_tip">
			<material>Gazebo/Grey</material>
			<mu1>0.2</mu1>
			<mu2>0.2</mu2>
			<selfCollide>0</selfCollide>
    </gazebo>

    <transmission name="${robot_name}_striker_tran_1">
		<robotNamespace>/${robot_name}</robotNamespace>
		<type>transmission_interface/SimpleTransmission</type>
		<joint name="${robot_name}_striker_joint_1">
			<hardwareInterface>${hardware_interface}</hardwareInterface>
		</joint>
		<actuator name="${robot_name}_striker_motor_1">
		    <hardwareInterface>${hardware_interface}</hardwareInterface>
		    <mechanicalReduction>1</mechanicalReduction>
		</actuator>
	</transmission>

	<transmission name="${robot_name}_striker_tran_2">
		<robotNamespace>/${robot_name}</robotNamespace>
		<type>transmission_interface/SimpleTransmission</type>
		<joint name="${robot_name}_striker_joint_2">
			<hardwareInterface>${hardware_interface}</hardwareInterface>
		</joint>
		<actuator name="${robot_name}_striker_motor_2">
		    <hardwareInterface>${hardware_interface}</hardwareInterface>
		    <mechanicalReduction>1</mechanicalReduction>
		</actuator>
	</transmission>


  </xacro:macro>


</robot> 
