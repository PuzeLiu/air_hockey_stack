<?xml version="1.0"?>

<!-- Here we define the robot, we named it "iiwa14_tool" -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Tool properties -->
  <xacro:property name="tool_mass" value="0.200" />
  <xacro:property name="tool_joint_offset" value="0.00 0.00 0.00" />
  <xacro:property name="tool_link_offset" value="-0.16 0.0 0.0" />

  <xacro:macro name="striker" params="robot_name parent hardware_interface">
    <joint name="${robot_name}_striker" type="fixed">
      <parent link="${parent}" />
      <child link = "${robot_name}_hand_link" />
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </joint>

    <link name="${robot_name}_hand_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.1" />
        <inertia
          ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0.0 ${PI/2}"/>
        <geometry>
          <mesh filename="package://air_hockey_description/meshes/striker/visual/hand.stl"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${PI/2}"/>
        <geometry>
          <mesh filename="package://air_hockey_description/meshes/striker/collision/hand.stl"/>
        </geometry>
        <material name="Grey"/>
      </collision>
    </link>

    <joint name="${robot_name}_striker_joint" type="revolute">
      <parent link="${robot_name}_hand_link" />
      <child link = "${robot_name}_striker" />
      <origin xyz="0.0 0.0 0.16" rpy="${PI/2} 0 0" />
      <axis xyz="0 0 1"/>
      <limit effort="300" lower="-2.96705972839" upper="2.96705972839" velocity="10"/>
      <safety_controller k_position="100" k_velocity="2" soft_lower_limit="-2.93215314335" soft_upper_limit="2.93215314335"/>
      <dynamics damping="0.01" friction="0.01"/>
    </joint>

  <!--  The striker frame is here defined -->
    <link name="${robot_name}_striker">
      <inertial>
        <origin xyz="0 0.0 0" rpy="0 0 0" />
        <mass value="0.0" />
        <inertia
                ixx="0.0" ixy="0.0" ixz="0.0"
                iyy="0.0" iyz="0.0" izz="0.0" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://air_hockey_description/meshes/striker/visual/only_striker.stl"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://air_hockey_description/meshes/striker/collision/only_striker.stl"/>
        </geometry>
        <material name="Grey"/>
        <surface>
            <bounce>
                <restitution_coefficient>0.8</restitution_coefficient>
            </bounce>
            <contact>
                <ode>
                    <soft_cfm>0.1</soft_cfm>
                    <soft_erp>0.1</soft_erp>
                    <max_vel>1</max_vel>
                </ode>
            </contact>
        </surface>
      </collision>
    </link>

    <joint name="${robot_name}_ee_joint" type="fixed">
      <parent link="${robot_name}_striker" />
      <child link = "${robot_name}_striker_tip" />
      <origin xyz="0.0 0.051 0.0" rpy="-${PI/2} 0 0" />
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" velocity="1000.0" />
    </joint>

    <link name="${robot_name}_striker_tip">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.1" />
        <inertia
                ixx="0.00012" ixy="0.0" ixz="0.0"
                iyy="0.00002" iyz="0.0" izz="0.00002" />
      </inertial>
    </link>

    <gazebo reference="${robot_name}_hand_link">
      <material>Gazebo/Grey</material>
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <selfCollide>0</selfCollide>
    </gazebo>

    <gazebo reference="${robot_name}_striker">
      <material>Gazebo/Grey</material>
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <selfCollide>0</selfCollide>
    </gazebo>

    <transmission name="${robot_name}_striker_tran">
      <robotNamespace>/${robot_name}</robotNamespace>
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${robot_name}_striker_joint">
	    <hardwareInterface>${hardware_interface}</hardwareInterface>
      </joint>
      <actuator name="${robot_name}_striker_motor">
	    <hardwareInterface>${hardware_interface}</hardwareInterface>
	    <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>



  </xacro:macro>


</robot> 
